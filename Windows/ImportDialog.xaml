<Window x:Class="EasyJob.Windows.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyJob.Windows"
        mc:Ignorable="d"
        Title="Import Dialog" Height="180" Width="630" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowState="Normal">
    <Grid>
        <Button x:Name="btnClose" Content="Close" Width="100" VerticalAlignment="Top" Margin="399,105,0,0" Click="btnClose_Click"/>
        <Button x:Name="btnImport" Content="Import" Width="100" VerticalAlignment="Top" Margin="504,105,0,0" Click="btnImport_Click"/>
        <CheckBox x:Name="ckIncludeScripts" Content="Import scripts files" Margin="187,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBrowseFolder" Content="Browse" Width="100" VerticalAlignment="Top" Margin="501,18,0,0" Click="btnBrowseFolder_Click"/>
        <Label Content="Import folder (zip) location: " HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtBrowserFile" HorizontalAlignment="Left" Margin="187,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309"/>
    </Grid>
</Window>
