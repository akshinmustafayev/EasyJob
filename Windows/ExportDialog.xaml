<Window x:Class="EasyJob.Windows.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyJob.Windows"
        mc:Ignorable="d"
        Title="Export Dialog" Height="180" Width="630" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowState="Normal">
    <Grid>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Margin="382,105,0,0" Click="btnClose_Click"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Margin="487,105,0,0" Click="btnExport_Click"/>
        <CheckBox x:Name="ckIncludeScripts" Content="Import scripts files" HorizontalAlignment="Left" Margin="173,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBrowseFolder" Content="Browse" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Margin="487,18,0,0" Click="btnBrowseFolder_Click"/>
        <Label Content="Import folder (zip) location: " HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtBrowserFolder" HorizontalAlignment="Left" Margin="173,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309"/>
    </Grid>
</Window>
